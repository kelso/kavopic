= form_with model: [:admin, @organization, @operator_organization] do |f|
  .row
    .col
      .form-group
        = f.label :operator_id, 'Operátor'
        = f.select :operator_id, Operator.all.collect{ |o| [o.full_name, o.id] }, { prompt: true }, { class: 'form-control' }

      .form-check
        = f.check_box :organization_manager, class: 'form-check-input'
        = f.label :organization_manager, 'Správca', class: 'form-check-label'

      .form-group

    .col

  = f.submit 'Potvrdiť', class: 'btn btn-primary'
  = link_to 'Storno', admin_organizations_path, class: 'btn btn-secondary'
