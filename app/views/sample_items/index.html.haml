%h1 Listing sample_items

%table
  %thead
    %tr
      %th Name
      %th Enabled
      %th
      %th
      %th

  %tbody
    - @sample_items.each do |sample_item|
      %tr
        %td= sample_item.name
        %td= sample_item.enabled
        %td= link_to 'Show', sample_item
        %td= link_to 'Edit', edit_sample_item_path(sample_item)
        %td= link_to 'Destroy', sample_item, method: :delete, data: { confirm: 'Are you sure?' }

%br

= link_to 'New Sample item', new_sample_item_path
